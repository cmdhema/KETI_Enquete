<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/liteemerald"
    tools:context="keti.org.enquete.ChartsFragment">

    <LinearLayout
        android:paddingLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색 기간"/>

            <EditText
                android:id="@+id/chart_time_start_et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="2015.01.01"/>

            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   ~   "/>

            <EditText
                android:id="@+id/chart_time_end_et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="2015.02.02"/>

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/buttonflat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                android:text="검색" />
        </LinearLayout>
        <GridView
            android:layout_marginTop="50dp"
            android:id="@+id/chart_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"></GridView>

    </LinearLayout>

</FrameLayout>
